{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const videoBanner = document.querySelector('.video-banner__video');
  
  if (videoBanner) {
    // Ensure video plays on load
    videoBanner.addEventListener('loadedmetadata', function() {
      // Check if the video is an HLS stream
      if (videoBanner.canPlayType('application/x-mpegURL') === '') {
        // If browser doesn't support HLS natively, you might need to use a library like hls.js
        console.log('HLS streaming may not be supported');
      }
      
      // Attempt to play
      videoBanner.play().catch(error => {
        console.log('Autoplay was prevented:', error);
      });
    });

    // Ensure video properties
    videoBanner.loop = true;
    videoBanner.muted = true;
    videoBanner.playsInline = true;
  }
});
{% endjavascript %}

